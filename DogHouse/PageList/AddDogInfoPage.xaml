<Page x:Class="DogHouse.PageList.AddDogInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DogHouse.PageList"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddDogInfoPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <TextBlock Style="{DynamicResource H1}">Добавление информации о собаке</TextBlock>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <TextBlock>Номер собаки</TextBlock>
                <TextBlock>Высота</TextBlock>
                <TextBlock>Ширина</TextBlock>
                <TextBlock>Описание</TextBlock>
            </StackPanel>
            <StackPanel Margin="5 0 5 0">
                <TextBox Width="150"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Тип вольера</TextBlock>
                <TextBlock>Возраст</TextBlock>
                <TextBlock>Пол</TextBlock>
                <TextBlock>Телефон</TextBlock>
            </StackPanel>
            <StackPanel Margin="5 0 5 0">
                <TextBox Width="150"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
