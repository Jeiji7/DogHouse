<Page x:Class="DogHouse.Pagess.SearchDogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DogHouse.Pagess"
      mc:Ignorable="d"
      Title="SearchDogsPage" Height="506" Width="837">

    <Grid Margin="0,0,-100,-57">
        <Button Name="BackBtn"
          Width="120"
          Margin="30 15 0 0"
          Content="Назад"
          Click="BackBtn_Click"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"/>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Список собак"
                 FontSize="27"
                 HorizontalAlignment="Center"/>
            <StackPanel Height="10"/>
            <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Center">
                <TextBlock Text="Поиск: "
                     VerticalAlignment="Center"/>
                <TextBox Name="SearchTb"
                   TextChanged="SearchTb_TextChanged"
                   Width="350"
                   VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Height="10"/>
            <ListView Name="DogLv"
                ScrollViewer.CanContentScroll="False"
                HorizontalContentAlignment="Stretch"
                Height="300"
                Width="800"
                d:ItemsSource="{d:SampleData ItemCount=2}" 
                SelectionChanged="DogLv_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="#ffffe1">
                            <StackPanel Height="20"/>
                            <Image Source="{Binding Photo}"
                             Width="120"
                             Height="120"/>
                            <StackPanel Height="10"/>
                            <TextBlock HorizontalAlignment="Center">
                             <Run Text="Id собаки"/>
                          <Run Text="{Binding Number}"/>
                            </TextBlock>
                            <TextBlock HorizontalAlignment="Center">
                             <Run Text="Описание:"/>
                          <Run Text="{Binding Description}"/>
                            </TextBlock>
                            <TextBlock 
                                 HorizontalAlignment="Center">
                             <Run Text="Телефон:"/>
                         <Run Text="{Binding PhoneNumber}"/>
                            </TextBlock>
                            <StackPanel Height="20"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2"></UniformGrid>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <StackPanel Height="20"/>
            <Button BorderBrush="Black"
              Name="AddBtn"
              HorizontalAlignment="Center"
              Width="321"
              Content="Добавить собаку"/>
        </StackPanel>
    </Grid>
</Page>
