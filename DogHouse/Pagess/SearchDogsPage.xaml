<Page x:Class="DogHouse.Pagess.SearchDogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DogHouse.Pagess"
      mc:Ignorable="d"
      Title="SearchDogsPage" Height="400" Width="800">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
          
        </Grid.RowDefinitions>
        <Button Name="BackBtn"
          Width="120"
          Margin="30,12,0,0"
          Content="Назад"
          Click="BackBtn_Click"
          HorizontalAlignment="Left"
          VerticalAlignment="Top" Grid.Row="1"/>
        <StackPanel HorizontalAlignment="Center"  Grid.Row="1">
            <TextBlock Text="Список собак"
                 FontSize="27"
                 HorizontalAlignment="Center"/>
            <StackPanel Height="10"/>
            <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Center">
                <TextBlock Text="Поиск: "
                     VerticalAlignment="Center"/>
                <TextBox Name="SearchTb"
                   TextChanged="SearchTb_TextChanged"
                   Width="350"
                   VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Height="10"/>
            <ListView Name="DogLv"
                      Height="260"
                ScrollViewer.VerticalScrollBarVisibility="Auto" 
                HorizontalContentAlignment="Stretch"
               
                d:ItemsSource="{d:SampleData ItemCount=2}" 
                SelectionChanged="DogLv_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="#ffffe1">
                            <StackPanel Height="5"/>
                            <Image Source="{Binding Photo}"
                             Width="130"
                             Height="130"/>
                            <StackPanel Height="5"/>
                            <TextBlock HorizontalAlignment="Center" FontSize="20">
                             <Run Text="Id собаки"/>
                          <Run Text="{Binding Number}"/>
                            </TextBlock>
                            <TextBlock HorizontalAlignment="Center" FontSize="20">
                             <Run Text="Описание:"/>
                          <Run Text="{Binding Description}"/>
                            </TextBlock>
                            <TextBlock 
                                 HorizontalAlignment="Center" FontSize="20">
                             <Run Text="Телефон:"/>
                         <Run Text="{Binding PhoneNumber}"/>
                            </TextBlock>
                            <StackPanel Height="5"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2"></UniformGrid>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <StackPanel Height="5"/>

        </StackPanel>
    </Grid>
</Page>
