            <TextBlock Text="+7 (927) 044-81-00" Foreground="Black"/>
            <TextBlock Text="+7 (923) 433-33-33" Foreground="Black"/>
            <TextBlock Text="Часы Работы" Foreground="#FF39DAF9" FontWeight="Bold" Margin="0 10 0 0"/>
            <TextBlock Text="Пон-Пт: 10:00-19:00" Foreground="Black"/>
            <TextBlock Text="Выходные: 10:00-17:00" Foreground="Black"/>
            <TextBlock Text="Адрес" Foreground="#FF39DAF9" FontWeight="Bold" Margin="0 10 0 0"/>
            <TextBlock Text="г.Казань, Ул.Стадионная 1, д1, 1 этаж " Foreground="Black"/>
            <TextBlock/>
