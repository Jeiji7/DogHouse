<Page x:Class="DogHouse.Pagess.AboutDogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DogHouse.Pagess"
      mc:Ignorable="d"
      Title="AboutDogPage" Height="400" Width="850">

    <Grid>
        <Button Name="BackBtn"
 Width="120"
 Margin="30 15 0 0"
 Content="Назад"
 Click="BackBtn_Click"
 HorizontalAlignment="Left"
 VerticalAlignment="Top"/>
        <StackPanel
     HorizontalAlignment="Center"
     VerticalAlignment="Center"
      Height="400">
            <TextBlock Text="Собака"
        HorizontalAlignment="Center"
        FontSize="27"/>
            <StackPanel Height="15"/>
            <Image Name="ClientImg"
    Width="200"
    Height="200"/>
            <StackPanel Height="10"/>

            <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Center"
                       FontSize="20" Margin="0 0 30 0">
 <Run Text="Id собаки:"/>
 <Run Name="NumberTb"/>
                </TextBlock>
                <TextBlock TextAlignment="Center"
                        FontSize="20">
 <Run Text="Пол:"/>
 <Run Name="GenderTb"/>
                </TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" >
                <TextBlock TextAlignment="Center"
                        FontSize="20"
                           Margin=" 0 0 30 0">
 <Run Text="Телефон:"/>
 <Run Name="PhoneTb"/>
                </TextBlock>
                <TextBlock TextAlignment="Center"
                        FontSize="20">
 <Run Text="Рост (см):"/>
 <Run Name="HeightTb"/>
                </TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
            <TextBlock TextAlignment="Center"
                        FontSize="20"
                       Margin="0 0 30 0">
 <Run Text="Вес (кг):"/>
 <Run Name="WeightTb"/>
            </TextBlock>
            <TextBlock TextAlignment="Center"
                        FontSize="20">
 <Run Text="Описание:"/>
 <Run Name="DescriptionTb"/>
            </TextBlock>
            </StackPanel>
            <StackPanel Height="20"/>


        </StackPanel>
    </Grid>
</Page>
