<Page x:Class="DogHouse.Pagess.AboutDogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DogHouse.Pagess"
      mc:Ignorable="d"
      Title="AboutDogPage" Height="694" Width="1096">

    <Grid>
        <Button Name="BackBtn"
 Width="120"
 Margin="30 15 0 0"
 Content="Назад"
 Click="BackBtn_Click"
 HorizontalAlignment="Left"
 VerticalAlignment="Top"/>
        <StackPanel Grid.Column="2"
     HorizontalAlignment="Center"
     VerticalAlignment="Center"
     Margin="20 0 0 0">
            <TextBlock Text="Собака"
        HorizontalAlignment="Center"
        FontSize="27"/>
            <StackPanel Height="15"/>
            <Image Name="ClientImg"
    Width="210"
    Height="210"/>
            <StackPanel Height="15"/>
            <TextBlock HorizontalAlignment="Center">
 <Run Text="Id собаки:"/>
 <Run Name="NumberTb"/>
            </TextBlock>
            <TextBlock TextAlignment="Center">
 <Run Text="Пол:"/>
 <Run Name="GenderTb"/>
            </TextBlock>
            <TextBlock TextAlignment="Center">
 <Run Text="Телефон:"/>
 <Run Name="PhoneTb"/>
            </TextBlock>
            <TextBlock TextAlignment="Center">
 <Run Text="Рост (см):"/>
 <Run Name="HeightTb"/>
            </TextBlock>

            <TextBlock TextAlignment="Center">
 <Run Text="Вес (кг):"/>
 <Run Name="WeightTb"/>
            </TextBlock>
            <TextBlock TextAlignment="Center">
 <Run Text="Описание:"/>
 <Run Name="DescriptionTb"/>
            </TextBlock>
            <StackPanel Height="20"/>


        </StackPanel>
    </Grid>
</Page>
