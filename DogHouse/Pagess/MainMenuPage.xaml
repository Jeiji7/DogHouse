<Page x:Class="DogHouse.Pagess.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DogHouse.Pagess"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid>

        <Button Name="BackBtn"
   Width="120"
   Margin="30 15 0 0"
   Content="Назад"
   
   HorizontalAlignment="Left"
   VerticalAlignment="Top" Click="BackBtn_Click"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Гостевая навигация"
           FontSize="40"
           FontFamily="Tw Cen MT"
           FontWeight="Bold"
           HorizontalAlignment="Center"
           Foreground="Black"/>

            <Button Name="OpenDogListBtn"
        Click="OpenDogListBtn_Click"
        Content="Список собак"
        Background="White" 
        Foreground="Black" 
        FontSize="20" 
        Padding="15,10" 
        Margin="0,10"
        BorderBrush="Black" 
        BorderThickness="1" 
        >
                <Button.Effect>
                    <DropShadowEffect
            BlurRadius="10" 
            Color="Black" 
            ShadowDepth="5"/>
                </Button.Effect>
            </Button>

            <Button x:Name="OpenContactBtn"
       
        Content="Контактные данные"
        Background="White" 
        Foreground="Black" 
        FontFamily="Tw Cen MT"
        FontSize="20" 
        Padding="15,10" 
        Margin="0,10"
        BorderBrush="Black" 
        BorderThickness="1" Click="OpenContactBtn_Click"
       >
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" 
                          Color="Black" 
                          ShadowDepth="5"/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</Page>
